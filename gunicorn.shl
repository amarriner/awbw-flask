#!/bin/bash

ROOT=/home/amarriner/python/awbwFlask
export PYTHONPATH=/home/amarriner/python
PID=$ROOT/gunicorn.pid

APP=api:app

if [ -f $PID ]; then
   kill `cat $PID`
   rm $PID
fi

cd $ROOT

. venv/bin/activate
gunicorn -D -w 4 --log-file=gunicorn.log --log-level=debug --pid=$PID $APP
deactivate
